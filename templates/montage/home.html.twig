{% extends "base.html.twig" %}
{% block body %}
    <h3>Liste des montages <small><a class="btn btn-primary" href="{{ path('add_montage') }}"   >Ajouter</a></small></h3>
    {%for msg in app.flashes('notice')  %}
        {{ msg }}
    {% endfor %}
    <table class="table table-borderless ">
        <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nom </th>
            <th>Client</th>
            <th>Cout</th>
            <th>Created At</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for montage in lesmontages %}
            <tr>
                <td>{{ montage.id }}</td>
                <td>{{ montage.nomMontage }}</td>
                <td>{{ montage.client }}</td>
                <td>{{ montage.cout}}</td>
                <td>{{ montage.createdAt |date(' H:i:s d/m/y ')}}</td>

                <td>
                    <a class ="  btn btn-primary " href = "#">Voir</a>
                    <a class ="  btn btn-info " href = "{{ path('update_montage', {'id':montage.id }) }}">Modifier</a>
                    <a class="btn btn-danger " href="{{ path('delete_montage', {'id':montage.id }) }}" onclick="return confirm('Are you sure to delete!{{ montage.nomMontage }}')">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun montage</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
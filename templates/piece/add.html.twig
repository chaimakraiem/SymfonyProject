{% extends 'base.html.twig' %}
{% form_theme fP 'bootstrap_5_layout.html.twig' %}

{% block title  %} Ajouter une Piece {% endblock%}
{% block body %}

<div class="container">
    <div class=" text-center mt-5 ">

        <h1 > Ajouter une Piece</h1>

    </div>
    <div class="row ">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">

                    <div class = "container">
                        {{ form_start(fP) }}

                            <div class="controls">

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(fP.nomPiece) }}

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(fP.quantite) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(fP.unite) }}

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(fP.fournisseur) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_row(fP.image) }}

                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            {{ form_row(fP.Montage) }}

                                        </div>

                                    </div>
                                </div>

                                    <div class="col-md-12">

                                        <input type="submit" class="btn btn-info btn-send  pt-2 btn-block
                            " value="Ajouter Piece" >

                                    </div>

                                </div>

                            {{ form_end(fP) }}
                    </div>
                </div>


            </div>
            <!-- /.8 -->

        </div>
        <!-- /.row-->

    </div>
</div>

{%endblock%}

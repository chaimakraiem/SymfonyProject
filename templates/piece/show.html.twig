 {% extends "base.html.twig" %}
    {% block body %}
        <h3>Liste des pieces <small><a class="btn btn-primary" href="{{ path('add_piece') }}"  >Ajouter</a></small></h3>
        {%for msg in app.flashes('notice')  %}
            {{ msg }}
        {% endfor %}
        <table class="table table-borderless ">
            <thead class="table-dark">

            <tr>
                <th>Nom Piece </th>
                <th>Quantit√©</th>
                <th>Fournisseur</th>
                <th> Montage</th>
                <th> Image</th>

            </tr>
            </thead>
            <tbody>
            {% for piece in listpieces %}
                <tr>

                <ul class="nav nav-pills nav-stacked">
                    <td>{{ piece.nomPiece |upper }}</td>
                    <td>{{ piece.quantite }}</td>
                    <td>{{ piece.fournisseur }}</td>
                    <td>{{ piece.Montage.nomMontage }}</td>
                    <td><img class="rounded"  alt="piece_image" width="50px" height=" 50px" src="{{ publicPath ~ piece.image }}"/></td>
                </ul>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune piece</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endblock %}

